<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <% if @user.image.attached? %>
         <%= image_tag @user.image, size: "40x40" %>
        <% else %>
         <%= image_tag 'no_image', size: "40x40" %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>