<% if flash[:notice] %>
   <div class="flash">
      <%= flash[:notice] %>
   </div>
<% end %>

<main>
  <p id="notice"></p>
    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>
            <div>
              <%= render 'books/list', user: @user, book: @book %>
            </div>
        </div>

        <div class='col-md-8 offset-md-1'>
          <h1>Users</h1>
          <table class='table'>
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
              </tr>
            </thead>

             <tbody>
               <% @users.each do |user| %>
                 <tr>
                   <td><%= image_tag user.get_image(40,40) %></td>
                   <td><%= user.name %></td>
                   <td><%= link_to "Show", user_path(user.id) %></td>
                 </tr>
               <% end %>
             </tbody>
            </table>
        </div>


      </div>
    </div>
</main>