<% if flash[:notice] %>
   <div class="flash">
      <%= flash[:notice] %>
   </div>
<% end %>


<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.image %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>User info</h2>

<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "63x63" %>
<% else %>
  <%= image_tag 'no_image', size: "63x63" %>
<% end %>

<p>name<%= @user.name %></p>
<p>introduction<%= @user.introduction %></p>

<p>
<% if @user == current_user %>
    <%= link_to(edit_user_path(@user), class:"text-dark") do %>
      <strong><i class="fa-solid fa-user-gear"></i></strong>
    <% end %>
<% end %>
</p>

<h3>New book</h3>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post, local: true do |f| %>

  <div>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>


  <div>
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>

   <div><%= f.submit 'Create Book' %></div>

<% end %>
